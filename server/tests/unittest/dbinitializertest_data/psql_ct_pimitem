CREATE TABLE PimItemTable (id SERIAL PRIMARY KEY,
                           rev INTEGER NOT NULL DEFAULT 0,
                           remoteId BYTEA,
                           remoteRevision BYTEA,
                           collectionId int8 REFERENCES CollectionTable(id) ON DELETE CASCADE ON UPDATE CASCADE,
                           mimeTypeId int8 REFERENCES MimeTypeTable(id) ON DELETE CASCADE ON UPDATE CASCADE,
                           datetime TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
                           atime TIMESTAMP,
                           dirty BOOL,
                           size int8 NOT NULL DEFAULT 0)
